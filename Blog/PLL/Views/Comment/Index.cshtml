@model Blog.PLL.ViewModel.Comment.CommentCollectionViewModel

@{
    ViewData["Title"] = "Список коментариев";
}

<div class="container mt-4">
    <h1>Список коментариев</h1>

    @foreach (var comment in Model.Comments)
    {
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">
                    <a strong="@Url.Action(null, "CommentDetail", new { comment = comment.Content })">@comment.Content</a>
                </h5>
            </div>
        </div>
    }
</div>